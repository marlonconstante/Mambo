<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:themes="clr-namespace:Mobishop.UI.Themes;assembly=Mobishop.UI"
	xmlns:controls="clr-namespace:Mobishop.UI.Controls;assembly=Mobishop.UI"
	xmlns:viewModels="clr-namespace:Mobishop.UI.ViewModels;assembly=Mobishop.UI"
	x:Class="Mobishop.UI.Controls.ProductView">
	<ContentView.Resources>
		<ResourceDictionary
			MergedWith="themes:Standard">
		</ResourceDictionary>
	</ContentView.Resources>
	<ContentView.BindingContext>
		<viewModels:ProductViewModel />
	</ContentView.BindingContext>
	<ContentView.Content>
		<StackLayout>
			<Image
				Source="{Binding ImageSource}">
			</Image>
			<Label
				HorizontalTextAlignment="Center"
				FontFamily="{StaticResource fontFamilyLight}"
				FontSize="Micro"
				Text="{Binding Name}">
			</Label>
			<controls:PriceLabelView
				HorizontalOptions="Center"
				FontSize="Large"
				Amount="9.99">
			</controls:PriceLabelView>
		</StackLayout>
	</ContentView.Content>
</ContentView>