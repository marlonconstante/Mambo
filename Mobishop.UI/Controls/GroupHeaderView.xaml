<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:themes="clr-namespace:Mobishop.UI.Themes;assembly=Mobishop.UI"
	x:Class="Mobishop.UI.Controls.GroupHeaderView">
	<ContentView.Resources>
		<ResourceDictionary
			MergedWith="themes:Standard">
		</ResourceDictionary>
	</ContentView.Resources>
	<ContentView.Content>
		<StackLayout
			BackgroundColor="{StaticResource headerBackgroundColor}"
			Spacing="0">
			<BoxView
				Color="{StaticResource separatorColor}"
				HeightRequest="1">
			</BoxView>
			<Label
				x:Name="TitleLabel"
				VerticalOptions="CenterAndExpand"
				TranslationX="15"
				TextColor="{StaticResource textColor}"
				FontFamily="{StaticResource fontFamilyMedium}"
				FontSize="Small">
			</Label>
			<BoxView
				Color="{StaticResource separatorColor}"
				HeightRequest="1">
			</BoxView>
		</StackLayout>
	</ContentView.Content>
</ContentView>