<?xml version="1.0" encoding="UTF-8"?>
<ContentView
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:themes="clr-namespace:Mobishop.UI.Themes;assembly=Mobishop.UI"
	x:Name="priceLabelView"
	x:Class="Mobishop.UI.Controls.PriceLabelView">
	<ContentView.Resources>
		<ResourceDictionary
			MergedWith="themes:Standard">
		</ResourceDictionary>
	</ContentView.Resources>
	<ContentView.Content>
		<StackLayout
			BindingContext="{x:Reference priceLabelView}"
			VerticalOptions="Start"
			Orientation="Horizontal"
			Spacing="0">
			<Label
				x:Name="SymbolLabel"
				VerticalTextAlignment="End"
				FontFamily="{StaticResource fontFamilyRegular}"
				TextColor="{Binding TextColor}">
			</Label>
			<Label
				x:Name="IntegerLabel"
				FontFamily="{StaticResource fontFamilyMedium}"
				TextColor="{Binding TextColor}">
			</Label>
			<Label
				x:Name="SeparatorLabel"
				FontFamily="{StaticResource fontFamilyMedium}"
				TextColor="{Binding TextColor}">
			</Label>
			<Label
				x:Name="DecimalLabel"
				FontFamily="{StaticResource fontFamilyMedium}"
				TextColor="{Binding TextColor}">
			</Label>
		</StackLayout>
	</ContentView.Content>
</ContentView>